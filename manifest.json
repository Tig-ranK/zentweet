{
  "manifest_version": 3,
  "name": "ZenTweet",
  "version": "1.0",
  "description": "Twitter, but Zen. Post without distractions.",
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "css": ["zen.css"],
      "js": ["redirect.js"]
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
